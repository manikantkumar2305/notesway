# Copy to backend/.env and fill with real values for your environment.

# Server
APP_NAME=ShareVault API
API_PREFIX=/api
HOST=0.0.0.0
PORT=8000
ENV=development
LOG_LEVEL=INFO

# MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/sharevault
MONGODB_DB=sharevault

# JWT
JWT_SECRET=change-me-please-32chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Bcrypt
BCRYPT_ROUNDS=12

#############################################
# Email
#############################################
# Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=example@gmail.com
SMTP_PASS=asdfghjkasdfghjkl
EMAIL_FROM=example<example@gmail.com>

# Security
OTP_LENGTH=
OTP_EXPIRY_MINUTES=
MAX_OTP_ATTEMPTS=
RESET_TOKEN_EXPIRY_MINUTES=


# AWS S3 (private bucket recommended)
AWS_ACCESS_KEY_ID=your-key
AWS_SECRET_ACCESS_KEY=your-secret
AWS_REGION=us-east-1
S3_BUCKET_NAME=sharevault-bucket
AWS_S3_ENDPOINT=

# CORS
CORS_ORIGINS=https://notesway.in,https://www.notesway.in

#############################################
# Rate limiting
#############################################
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW="15m"

#############################################
# Security Session Settings
#############################################
SECURE_COOKIE=false
SESSION_TIMEOUT_MINUTES=30
